<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to '#' do %>
      <%= t('nav.mail_address') %>
    <% end %>
  </li>
  <li class="">
    <%= link_to my_setting_path do %>
      <%= t('nav.mail_setting') %>
    <% end %>
  </li>
  <li>
    <%= link_to my_edit_path do %>
      <%= t('nav.edit_user') %>
    <% end %>
  </li>
</ul>

<dl>
  <dt><%= t('.email') %></dt> 
  <dd>
    <% if @user.valid_email.present? %>
      <span class="label"><%= @user.valid_email %></span>
    <% else %>
      <span class="label label-important"><%= t('.unregistered') %></span>
    <% end %>
  </dd>
  <% if @user.unconfirmed_email.present? %>
    <dt><%= t('.unconfirmed_email') %></dt> 
    <dd>
      <span class="label"><%= @user.unconfirmed_email %></span>
      <span class="label label-important"><%= t('.unconfirmed') %></span>
    </dd>
  <% end %>
</dl>
<%= form_tag email_path, method: :put do %>
  <div class="controls controls-row">
    <%= text_field_tag :email, nil, class: 'span10' %>
    <%= submit_tag t('action.update'), class: 'span2 btn' %>
  </div>
<% end %>
