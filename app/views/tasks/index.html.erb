<ul class="breadcrumb">
  <li><%= link_to t("nav.#{@parent.class.to_s.tableize}"), url_for(@parent) %></a> <span class="divider">/</span></li>
  <% if @parent.respond_to?(:group) && @parent.group.present? %>
    <li><%= link_to @parent.group.name, url_for(@parent.group) %> <span class="divider">/</span></li>
  <% end %>
  <li><%= link_to @parent.name, url_for(@parent) %> <span class="divider">/</span></li>
  <li class="active"><%= t('nav.task') %></li>
</ul>
<%= render 'form' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="span3"><%= t('activerecord.attributes.task.created_user') %></th>
      <th class="span8"><%= t('activerecord.attributes.task.name') %></th>
      <th class="span1"><%= t('activerecord.attributes.task.updated_at') %></th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <% if task.done? %>
          <i class="icon-ok"></i>
        <% end %>
        <% if task.completed_user.present? %>
          <%= link_to user_path(task.completed_user) do %>
            <%= image_tag task.completed_user.image, size: '25x25', class: 'face' %>
            <%= task.completed_user.name %>
          <% end %> 
        <% else %>
          <%= link_to user_path(task.created_user) do %>
            <%= image_tag task.created_user.image, size: '25x25', class: 'face' %>
            <%= task.created_user.name %>
          <% end %> 
        <% end %> 
      </td> 
      <td><%= task.name %></td> 
      <td>
        <% if task.done? %>
          <%= link_to task_path(@parent, task), method: :delete, class: 'btn btn-danger' do %>
            <%= t('.delete') %>
          <% end %> 
        <% else %>
          <%= link_to task_path(@parent, task), method: :put, class: 'btn btn-success' do %>
            <%= t('.update') %>
          <% end %> 
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
