<%= form_for(@event, html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/error', model: @event %>
<fieldset>
  <div class="control-group">
    <%= f.label :group_id, class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :group_id, Group.collection_select(current_user.id), :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, class: 'control-label'%>
    <div class="controls">
      <%= f.text_field :name, class: 'span5', placeholder: t('events._form.placeholder.name') %>
      <span class="help-inline">
        <span class="label label-warning"><%= t('common.require') %></span>
      </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :summary, class: 'span5', placeholder: t('events._form.placeholder.summary') %>
      <span class="help-inline">
        <span class="label label-warning"><%= t('common.require') %></span>
      </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, class: 'span5', placeholder: t('events._form.placeholder.content') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place_name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :place_name, class: 'span5', placeholder: t('events._form.placeholder.place_name') %>
      <span class="help-inline">
        <span class="label label-warning"><%= t('common.require') %></span>
      </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place_url, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :place_url, class: 'span5', placeholder: t('events._form.placeholder.place_url') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place_address, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :place_address, class: 'span5', placeholder: t('events._form.placeholder.place_address') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :capacity_min, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :capacity_min, class: 'span1' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :capacity_max, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :capacity_max, class: 'span1' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receive_begin_at, class: 'control-label' %>
    <div class="controls">
      <div class="input-append date datepicker" data-date-format="yyyy-mm-dd">
        <%= f.text_field :receive_begin_date, class: 'input-small' %>
        <span class="add-on">
          <i class="icon-th"></i>
        </span>
      </div>

      <div class="input-append bootstrap-timepicker-component">
        <%= f.text_field :receive_begin_time, class:'timepicker-default span1 timepicker' %>
        <span class="add-on">
          <i class="icon-time"></i>
        </span>
      </div>
      <%= t('common.range') %>
      <div class="input-append date datepicker" data-date-format="yyyy-mm-dd">
        <%= f.text_field :receive_end_date, class: 'input-small' %>
        <span class="add-on">
          <i class="icon-th"></i>
        </span>
      </div>
      <div class="input-append bootstrap-timepicker-component">
        <%= f.text_field :receive_end_time, class:'timepicker-default span1 timepicker' %>
        <span class="add-on">
          <i class="icon-time"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :begin_at, class: 'control-label' %>
    <div class="controls">
      <div class="input-append date datepicker" data-date-format="yyyy-mm-dd">
        <%= f.text_field :begin_date, class: 'input-small' %>
        <span class="add-on">
          <i class="icon-th"></i>
        </span>
      </div>

      <div class="input-append bootstrap-timepicker-component">
        <%= f.text_field :begin_time, class:'timepicker-default span1 timepicker' %>
        <span class="add-on">
          <i class="icon-time"></i>
        </span>
      </div>
      <%= t('common.range') %>
      <div class="input-append date datepicker" data-date-format="yyyy-mm-dd">
        <%= f.text_field :end_date, class: 'input-small' %>
        <span class="add-on">
          <i class="icon-th"></i>
        </span>
      </div>
      <div class="input-append bootstrap-timepicker-component">
        <%= f.text_field :end_time, class:'timepicker-default span1 timepicker' %>
        <span class="add-on">
          <i class="icon-time"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :event_payment_kind_id, class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :event_payment_kind_id, EventPaymentKind.enable_list.order(:id).all, :id, :label %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fee, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :fee, class: 'span2' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :scope, class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :scope_id, Scope.enable_list.all, :id, :label %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, class:['btn', 'btn-primary'] %>
  </div>
</fieldset>
<% end %>
