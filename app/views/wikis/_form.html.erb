<%= form_for([@parent, @wiki], class: '') do|f|%>
  <%= render 'shared/error', model: @wiki %>
  <fieldset>
    <div class="control-group">
      <%= f.label :name, class: 'control-label'%>
      <div class="controls">
        <%= f.text_field :name, class: 'span12' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :content, class: 'control-label auto_grow', rows: '3' %>
      <div class="controls">
        <%= f.text_area :content, class: 'span12' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, class:['btn', 'btn-primary'] %>
    </div>
  </fieldset>
<% end %>
