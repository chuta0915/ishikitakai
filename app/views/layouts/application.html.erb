<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "#ishikitakai" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= render 'shared/ga' %>
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
    <%= render 'shared/pusher' %>
    <%= javascript_include_tag "application" %>
  </head>
  <body class="<%= yield :body_class %>" data-id="<%= yield :body_data_id %>">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">#ishikitakai</a>
          <div class="container nav-collapse">
            <ul class="nav">
              <li class="<%=(request.path == events_path ? 'active': '')%>">
                <%= link_to events_path do %>
                  <i class="icon-calendar"></i> 
                  <%= t("nav.events") %>
                <% end %> 
              </li>
              <li class="<%=(request.path == groups_path ? 'active': '')%>">
                <%= link_to groups_path do %>
                  <i class="icon-heart"></i> 
                  <%= t("nav.groups") %>
                <% end %> 
              </li>
            </ul>
            <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target="#">
                  <%= image_tag current_user.image, size:'24x24', class:'face'%>
                  <%= current_user.name %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to my_root_path do %>
                      <i class="icon-user"></i>
                      <%= t('nav.mypage') %>
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to logout_path do %>
                      <i class="icon-off"></i>
                      <%= t('nav.logout') %>
                    <% end %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li>
              <%=link_to new_user_session_path do%>
                <i class="icon-ok"></i>
                <%= t('nav.login') %>
              <% end %>
              </li>
            <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <div class="row">
          <div class="<%= content_for?(:main_span) ? yield(:main_span) :'span12'%>">
            <div id="alert_area">
              <% if alert.present? %>
                <div class="alert  alert-error fade in">
                  <a class="close" data-dismiss="alert" href="#">&times;</a>
                  <%= alert %>
                </div>
              <% end %>
              <% if notice.present? %>
                <div class="alert  alert-success fade in">
                  <a class="close" data-dismiss="alert" href="#">&times;</a>
                  <%= notice %>
                </div>
              <% end %>
            </div>
            <div id="main_content"><%= yield %></div>
          </div>
          <% if content_for?(:sidebar) %>
          <div class="span3">
            <div class="well sidebar-nav">
              <%= yield :sidebar %>
            </div>
          </div>
          <% end %>
        </div><!--/row-->
      </div><!--/content-->

      <footer>
        <ul class="menu">
          <li><%= link_to t('nav.about'), about_path, class:'push_state' %></li>
          <li><%= link_to t('nav.terms'), terms_path, class:'push_state' %></li>
          <li><%= link_to t('nav.policy'), policy_path, class:'push_state' %></li>
        </ul>
        <p>&copy; <%= Settings.site.copyright.html_safe %> <%= Time.current.year %></p>
        <p>
          <%= link_to 'http://twitter.github.com/bootstrap/' do %>
            powered by twitter bootstrap
          <% end %> 
        </p>
        <%= render 'shared/sns_buttons', :url => request.url %>
      </footer>

    </div> <!-- /container -->
    <%= render 'shared/fb_load_js', :app_id => ENV['FB_APP_ID'] %>
  </body>
</html>
